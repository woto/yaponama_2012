<%- model_class = SpareInfo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:catalog_number) %>:</strong></dt>
  <dd><%= @admin_spare_info.catalog_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:manufacturer) %>:</strong></dt>
  <dd><%= @admin_spare_info.manufacturer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd>
    <div id="editable" contenteditable="true">
      <%= raw Sanitize.clean @admin_spare_info.content, Rails.configuration.sanitize_config %>
