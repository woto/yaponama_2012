<div id="grid-toolbar-actions">

  <div class="btn-group">

    <%= link_to (Rails.configuration.products_status.try(:[], params.try(:[], :status)).try(:[], 'real') && Rails.configuration.product_guess_next_status.try(:[], params.try(:[], :status)) ? smart_route({:prefix => [Rails.configuration.product_guess_next_status.try(:[], params.try(:[], :status)).to_sym], :postfix => [:products]}, jaba.merge(:page => @page, :sort => params[:sort_column], :direction => params[:sort_direction], :return_path => request.fullpath)) : '#'), class: "btn btn-success", rel: "tooltip", data: {container: "body", placement: "bottom", html: "true", trigger: "hover", title: "#{render 'grid_toolbar_selected_content'}"} do %>
      <%# icon 'bolt' %>
      <%= Rails.configuration.products_status.try(:[], Rails.configuration.product_guess_next_status.try(:[], params.try(:[], :status))).try(:[], 'action') || t('.action', :default => t('helpers.actions')) %>
    <% end %>

    <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
      <span class="sr-only">Действия</span>
    </button>

    <ul class="dropdown-menu" role="menu">
      <% Rails.configuration.products_status.select{|k, v| v['real'] == true}.each do |k, v| %>
        <li>
        <%= link_to smart_route({:prefix => [k.to_sym], :postfix => [:products]}, jaba.merge(:page => @page, :sort => params[:sort_column], :direction => params[:sort_direction], :return_path => request.fullpath)), id: "form_#{k}_action" do %>
            <% if v['badge'].present? %>
              <span class="badge badge-<%= k %>">
                <%= v['badge'] %>
              </span>
            <% end %>
            <%= v["action"] %>
          <% end %>
        </li>
      <% end %>

      <li class="divider"></li>

      <li>
        <%= link_to smart_route({prefix: [:multiple_destroy], postfix: [:pages] }, :primary_key => params[:primary_key], :return_path => request.fullpath), data: { confirm: "Вы увереные, что хотите удалить товар?" } do %>

          <span class="badge">
            <%= icon 'times' %>
          </span>
           Удалить
        <% end %>
      </li>

    </ul>

  </div>

</div>

