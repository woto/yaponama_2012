<%= f.nested_fields do %>

  <%= f.destroyable do %>

    <%= panel 'primary' do |p| %>

      <%= p.heading do %>
        <%= p.title do %>
          E-mail
          <%= f.standard_remove %>
        <% end %>
      <% end %>

      <%= p.body do %>

        <%= f.twbs_text_field :value, asterisk: true, label: false %>

        <%= render :partial => 'profileables/forms/shared/inputs', :locals => {:f => f} %>
        <%= render :partial => 'profileables/forms/shared/confirms', :locals => {:f => f} %>


      <% end %>

    <% end %>

  <% end %>

<% end %>
