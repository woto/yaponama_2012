<%= page do |p| %>

  <%= p.breadcrumb do %>
    <%= breadcrumb false, exception=true do |b| %>
      <%= b.item('Каталоги') %>
    <% end %>
  <% end %>

  <%= p.title do %>
    <% @meta_title = 'Каталоги автозапчастей' %>
    <% discourse_head(@meta_title, @meta_title_small) %>
    <%= page_header %>
  <% end %>

  <%= p.content do %>
    <% if @brands.exists? %>
      <%= panel 'primary' do |p| %>
        <%= p.heading do %>
          <%= p.title do %>
            Выберите марку автомобиля
          <% end %>
        <% end %>
        <%= p.body do %>
          <div id="catalogs-show-brands" class="brands bottom-space-lg clearfix">
            <% @brands.each do |brand| %>
              <%= brands_decorator(lambda{|brand| catalogs_brand_path(brand)}, brand, lambda{|brand| "#{hidden('Запчасти на ')}#{brand.name} <br><small class='text-muted'>(#{brand.count} шт.)</small>".html_safe}) %>
            <% end %>
          </div>
        <% end %>
      <% end %>


    <% end %>
  <% end %>

<% end %>

<%= discourse_body(@meta_title, @meta_title_small) %>
