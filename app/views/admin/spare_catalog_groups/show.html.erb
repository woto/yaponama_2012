<% title_show %>

<%= page do |p| %>

  <%= p.breadcrumb do |b| %>
    <%= b.item 'Главная', [:root] %>
    <%= b.item 'Администрирование', [:admin, :root] %>
    <%= b.item 'Группы категорий', [:admin, @resource_class] %>
    <%= b.item @meta_title %>
  <% end %>

  <%= p.title do %>
    <%= page_header %>
  <% end %>

  <%= p.content do %>

    <dl>
      <dt>
        <%= SpareCatalogGroup.human_attribute_name :ancestors %>
      </dt>
      <dd>
        <% @resource.ancestors.each do |a| %>
          <%= a.to_label %>
        <% end %>
      </dd>
    </dl>

    <dl>
      <dt>
        <%= SpareCatalogGroup.human_attribute_name :name %>
      </dt>
      <dd>
        <%= @resource.name %>
      </dd>
    </dl>

    <br />
    <br />

    <%= link_to url_for(action: :new, return_path: request.fullpath), class: "btn btn-primary" do %>
      <%= icon 'plus' %>
    <% end %>

    <br />
    <br />

    <%= render 'smart_show' %>
  <% end %>
<% end %>

