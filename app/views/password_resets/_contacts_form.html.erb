<%= form_for @password_reset, url: contacts_password_reset_path, builder: TwitterBootstrapFormBuilder, html: { class: 'form-horizontal' } do |f| %>

  <%= f.alert_danger do %>
    <%= @password_reset.errors[:base].join %>
  <% end %>

  <% case @password_reset.with %>
  <% when 'email' %>
    <%= f.text_input :value, label: 'email'  %>
  <% when 'phone' %>
    <%= f.text_input :value, rel: 'mobile-mask-on', label: 'mobile_phone' %>
  <% end %>

  <%= f.hidden_field :with %>

  <%= f.standard_submit %>

<% end %>
