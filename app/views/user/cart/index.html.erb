<% @meta_title = "Корзина" %>

<%= page do |p| %>

  <%= p.breadcrumb do |b| %>
    <%= b.item 'Главная', root_path %>
    <%= b.item 'Личный кабинет', user_path %>
    <%= b.item @meta_title %>
  <% end %>

  <%= p.title do %>
    <%= page_header %>
  <% end %>

  <%= p.content do %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th> <%= @resource_class.human_attribute_name(:id) %> </th>
          </tr>
        </thead>
        <tbody>
          <% @resources.each do |resource| %>
            <tr>
              <td> 
                <%= resource.id %> <br />
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br />
    <%= paginate @resources %>
    <br />
    <br />
  <% end %>

<% end %>
