<%= somebody_tabs do %>

  <%= image_tag @brand.image_url, class: 'pull-right', style: 'margin-top: -30px;' %>

  <% @meta_title = "Производитель запчастей #{@brand.name}" %>
  <% @meta_title_lead = @brand.preview %>
  <% @meta_title_small = "(рус. #{@brand.slang})" if @brand.slang.present? %>
  <%= page_header %>

  <div class="clearfix"></div>

  <% if @spare_infos.exists? %>
    <%= panel 'info', class: 'by-car' do |p| %>
      <%= p.heading do %>
        <%= p.title do %>
          Выберите группу запчастей
        <% end %>
      <% end %>
      <%= p.body do %>
    <ol id="catalog-spare-catalogs">
      <% @spare_infos.each do |spare_info| %>
        <li data-clickable-object> <%= link_to safe_join([content_tag(:strong, spare_info.cached_spare_catalog)]), category_path(spare_info.to_category_param, "q[brand_id_eq_any][]" => @brand.id), 'data-clickable-href' => '' %> <%= "<small class='text-muted'>(#{spare_info.count}&nbsp;шт.)</small>".html_safe %></li>
      <% end %>
    </ol>
      <% end %>
    <% end %>

  <% end %>

  <%# TODO тут должен быть дополнительный preview и content? Например NISSAN, выпускает и автомобили, и запчасти%>
  <div id="brand-preview"><%== @brand.preview %></div>
  <div id="brand-content"><%== @brand.content %></div>

  <% if @current_user.seller? %>
    <%= link_to edit_admin_brand_path(@brand, :return_path => request.fullpath), class: 'btn btn-lg btn-warning top-space-lg bottom-space-lg' do %>
      <%= icon 'edit' %>
      Редактировать
    <% end %>
  <% end %>

<% end %>
