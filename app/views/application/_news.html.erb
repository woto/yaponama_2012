<h4> <%= link_to "#{icon('bullhorn')} Новости компании".html_safe, news_index_path %> </h4>
<% News.order(date: :desc).limit(1).each do |news| %>
  <div class="top-space bottom-space">
    <span class="text-muted text-xs"> <%= l news.date, format: :news %> </span>
    <span class="text-lg"> <%= link_to news.title,  news_path(news) %> </span>
  </div>
<% end %>
<hr />

<%= yield :sidebar %>
