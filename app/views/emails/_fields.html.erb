<%= f.nested_fields do %>

  <%= f.destroyable do %>

    <%= panel 'primary', class: 'profile-email' do |p| %>

      <%= p.heading do %>
        <%= p.title do %>
          E-mail
          <%= f.standard_remove %>
        <% end %>
      <% end %>

      <%= p.body do %>

        <%= f.twbs_text_field :value, asterisk: true, label: false %>

        <%= f.read_only :creation_reason, value: 'profile' %>
        <%= f.read_only :confirm_required, value: !admin_zone? %>

        <%# render :partial => 'profileables/forms/shared/notes', :locals => {:f => f} %>
        <%= render :partial => 'profileables/forms/shared/confirms', :locals => {:f => f} %>


      <% end %>

    <% end %>

  <% end %>

<% end %>
