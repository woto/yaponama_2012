<%= row do %>
  <%= c1 do %>
    <%= twbs_form_for @resource, :url => [(admin_zone? ? :admin : nil), (admin_zone? ? @somebody : :user), @resource] do |f| %>

      <% content_for :form_error do %>
        <%= f.error_notification %>
      <% end %>

      <%= f.alert_danger do %>
        <%= f.error(:base) %>
      <% end %>

      <%= render "fields", f: f %>

      <%= f.twbs_submit %>

    <% end %>
  <% end %>
<% end %>
