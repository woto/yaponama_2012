<%= render :layout => 'content/groups/block', locals: { f: f } do %>

  <%= f.twbs_hidden_field :order %>

  <%= f.twbs_hidden_field :chat_partable_type %>

  <%= f.fields_for :chat_partable do |partable| %>
    <%= partable.twbs_text_area :text, placeholder: 'Сообщение', label: false, class: 'input-sm ckeditor-simple' %>
  <% end %>


  <%= javascript_tag do %>

    (function() {

      $(function() {

        $(document).trigger('update-ckeditor-simple');

      });

    }).call(this);

  <% end %>


<% end %>
