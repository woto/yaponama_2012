<% @meta_title = "Редактирование профиля" %>

<%= page do |p| %>

  <%= p.breadcrumb do |b| %>
    <%= b.item 'Главная', root_path %>
    <%= b.item 'Администрирование', [:admin, :root] %>
    <%= b.item 'Пользователи', [:admin, @resource_class] %>
    <%= b.item guest_or_user_to_label(@resource), [:admin, @resource] %>
    <%= b.item @meta_title %>
  <% end %>

  <%= p.title do %>
    <%= page_header %>
  <% end %>

  <%= p.content :sm do %>
    <%= render 'form'%>
  <% end %>

<% end %>
