<%= somebody_tabs do %>
  <%= page_header %>
  <%# TODO bro sanitize check?! %>
  <div id='editable' class='editable'>
    <%== @resource.content %>
  </div>

  <%= form_tag [:admin, @resource], :method => :put, :remote => true do %>
    <%= hidden_field_tag 'page[content]', '', :id => :content %>
    <%# hr %>
    <%# button#edit.btn.btn-warning Редактировать %>
    <%# button#save.btn.btn-primary Сохранить %>
    <%# button#cancel.btn.btn-default Отмена %>
  <% end %>

  <hr />

  <% if @current_user.seller? %>
    <%= link_to edit_admin_page_path(@resource, :return_path => request.fullpath), class: 'btn btn-lg btn-warning top-space-lg bottom-space-lg' do %>
      <%= icon 'edit' %>
      Редактировать
    <% end %>
  <% end %>
<% end %>
