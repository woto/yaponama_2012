<%= render :layout => 'content/groups/block', locals: { f: f } do %>

  <%= f.twbs_hidden_field :order %>

  <%= f.twbs_hidden_field :chat_partable_type %>

  <%= f.fields_for :chat_partable do |partable| %>
    <%= partable.twbs_text_field :title, placeholder: 'Заголовок', label: false, class: 'input-sm' %>
    <%= partable.twbs_select :size, Rails.configuration.title_sizes.map {|k,v| [v,k]}.to_a, { label: false }, class: 'input-sm' %>
  <% end %>

<% end %>
