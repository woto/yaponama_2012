<% title_edit %>

<%= page do |p| %>

  <%= p.breadcrumb do |b| %>
    <%= b.item 'Главная', root_path %>
    <%= b.item 'Администрирование', admin_root_path %>
    <%= b.item 'Замены', admin_spare_replacements_path %>
    <%= b.item @resource.to_label, polymorphic_path([:admin, @resource]) %>
    <%= b.item @meta_title %>
  <% end %>

  <%= p.title do %>
    <%= page_header %>
  <% end %>

  <%= p.content :sm do %>
    <%= render 'form'%>
  <% end %>

<% end %>
