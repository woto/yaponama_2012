<%= f.form_group method do %>

  <%= f.control_label(extra[:label] || method, asterisk: extra[:asterisk]) %>

  <%= a2 do %>
    <%= f.collection_radio_buttons method, collection, value_method, text_method, options, html_options do |ch| %>
      <div class="radio">
        <%= ch.label {ch.radio_button + ch.text} %>
      </div>
    <% end %>
    <%= f.error method %>
    <%= f.hint method %>
  <% end %>

<% end %>
