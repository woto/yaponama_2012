<!-- Main hero unit for a primary marketing message or call to action -->

<div class="hero-unit">
  <%= render(:partial => "blocks/show", :locals => {:block_name => 'hero_unit'}) %>
</div>

<%= content_tag :div, "smoothScrollingDuration" => "100", "data-smooth-scrolling" => "off", "data-0" => "background-position: -300px -430px", "data-top-bottom" => "background-position: -300px 130px", style: "padding: 80px 0px; background: url('#{asset_url 'parts.jpg'}') 0px 0px;" do %>

  <div class="container">

    <%= row do %>

      <div class="col-md-6 col-lg-offset-1 col-lg-5" style="color: white; text-shadow: 0 0 9px black;">
        <h1 style="margin-bottom: 40px; font-size: 36px;" class="text-left">Добро пожаловать!</h1>

        <h4 style="line-height: 190%" class="text-justify">Мы занимаемся продажей оригинальных и неоригинальных запчастей для японских автомобилей. Для вашего удобства мы принимаем оплату всеми современными способами. Приобретенный товар вы можете самостоятельно забрать в наших магазинах в Москве или заказать доставку. Так же мы отправляем почтовыми и транспортными компаниями по России.</h4>
      </div>

      <div class="col-md-6 col-lg-5">
        <div class="col-lg-10 col-lg-offset-1 top-space-lg bottom-space-lg">
          <%= form_tag polymorphic_path([:new, *jaba3, :product]), remote: true, :method => :get, class: 'bottom-space-lg' do %>
            <div class="input-group">
              <input type="text" name="catalog_number" class="form-control input-lg" placeholder="Артикул детали">
              <span class="input-group-btn">
                <button class="btn btn-primary btn-lg" type="submit">Найти</button>
              </span>
            </div><!-- /input-group -->
          <% end %>
          <span style="color: white; text-shadow: 0 0 1px black"> Если вы уже знаете артикул запчасти, так же его называют каталожный номер, то можете сразу воспользоваться поиском. </span>
        </div>
      </div>

    <% end %>

  </div>

<% end %>

<%= content_tag :div, style: "padding: 40px 0; border-top: 3px solid #333" do %>

  <div class="container">

    <%= row do %>

      <div class="col-md-5 col-lg-offset-1 col-lg-4">
        <h1 style="margin-bottom: 40px; font-size: 36px">Каталоги</h1>
        <h4 class="text-justify" style="line-height: 190%">Если вы не знаете артикула детали и разбираетесь в устройстве автомобиля, то можете самостоятельно подобрать себе необходимую деталь. По вашему запросу менеджер проверит совместимость заказанных деталей с вашим автомобилем.</h4>
      </div>
      <div class="col-md-7 col-lg-6">
        <div id="brands" class="bottom-space-lg">
          <%= row do %>
            <div class="col-lg-10 col-lg-offset-1 top-space-lg bottom-space">
              <div class="input-group input-group-lg">
                <span class="input-group-addon"><%= icon 'search' %></span>
                <input type="text" class="form-control search" placeholder="Быстрый поиск">
              </div>
            </div>
          <% end %>
          <ul class="clearfix list brands list-inline" style="background: #FFF; padding: 10px 0;">
            <% Brand.where("brand_id is NULL").where(:manufacturer => true).order(:name => :asc).each do |a, b| %>
              <li>
                <%= brands_decorator(a, {:title => true}) %>
              </li>
            <% end %>
          </ul>
          <ul class="pagination hidden" style="margin: 10px 0 20px 20px !important"></ul>
        </div>
      </div>

    <% end %>

  </div>

<% end %>


<%= content_tag :div, style: "padding: 0; background: #eee; height: 300px; overflow: hidden; border-top: 3px solid #333" do %>

  <div class="container">

    <%= row do %>

      <div class="col-lg-12" style="position: relative">
        <% Faq.all.each do |faq| %>
          <p data-top="top:<%= -Random.rand(600) %>px" data-bottom="top:<%=Random.rand(600)%>px" class="text-muted unselectable" style="color: #555; font-size: <%= 20 + Random.rand(20) %>px; font-weight: bold; position: absolute; top: <%= Random.rand(340) - 40 %>px ; left: <%= Random.rand(800) - 100 %>px; padding: 0; display: block; white-space: nowrap"><%= faq.question %></p>
        <% end %>

        <div style="top: 120px; position: absolute; left: 0; right: 0; width: 300px" class="center-block">
          <a href="/faqs" class="btn btn-primary btn-lg btn-block"> Полезная информация </a>
        </div>

      </div>

    <% end %>

  </div>

<% end %>

<%= content_tag :div, style: "padding: 60px 0; background: #3c5868" do %>

  <div class="container">

    <%= row do %>

      <div class="col-md-6 col-lg-offset-1 col-lg-5 bottom-space-lg">
        <h1 style="margin-bottom: 40px; font-size: 36px; color: white">Онлайн консультант</h1>
        <h4 class="text-justify" style="line-height: 190%; color: white">Нет желания, опыта или времени разбираться в премудростях автомобиля и запчастях? Обратитесь в нашу службу поддержки и вам обязательно помогут наши специалисты. </h4>

        <ul class="top-space-lg list-inline bottom-space-lg" style="color: white">

          <li>
            <%= call_button '#', class: 'btn btn-primary', style: 'border: #293d49; color: white' do %>
              <%= icon 'phone' %>
              Онлайн звонок
            <% end %>
          </li>

          <li>
            <a href="mailto:info@avtorif.ru" class="btn btn-primary" style="border: #293d49; color: white">
              <%= icon 'envelope' %>
              info@avtorif.ru
            </a>
          </li>

          <li>
          <%= link_to polymorphic_path([:modal] + jaba3 + [:talks]), remote: true, class: 'btn btn-primary', style: 'border: #293d49; color: white' do %>
            <%= icon 'comments' %>
            Чат
          <% end %>
          </li>

        </ul>

      </div>

      <div class="col-md-6 col-lg-5">

        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

          <% images = Gallery.all %>

          <!-- Indicators -->
          <ol class="carousel-indicators">
            <% @first = nil %>
            <% (0..images.count-1).each do |i| %>
              <li data-target="#carousel-example-generic" data-slide-to="<%= i %>" <%= (i == 0) ? "class='active'".html_safe : '' %> ></li>
            <% end %>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">

            <% images.each do |image| %>

              <div class="item <%= mark_first_as_active %>">
                <%= image_tag image.image.welcome.url %>
                <div class="carousel-caption" style="padding: 0; left: 15%; right: 15%; bottom: 0; top: 0">
                  <div style="display: table; height: 100%; width: 100%">
                    <div style="display: table-cell; vertical-align: middle">
                      <div style="background: rgba(0,0,0,0.3); border-radius: 3px;">
                        <h3 style="color: white"><%= image.title %></h3>
                        <p style="color: white;"><%== image.content %></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            <% end %>

          </div>

          <!-- Controls -->
          <a href="#carousel-example-generic" class="left carousel-control" data-slide="prev">
            <span class="icon-prev">
            </span>
          </a>
          <a href="#carousel-example-generic" class="right carousel-control" data-slide="next">
            <span class="icon-next">
            </span>
          </a>

        </div>

      </div>

    <% end %>

  </div>

<% end %>


<div class="container">

  <%= row style: 'margin-left: 0; margin-bottom: 0px' do %>

    <div class="col-lg-12">
      <%= render(:partial => "blocks/show", :locals => {:block_name => 'blockquote'}) %>
    </div>

  <% end %>

</div>
