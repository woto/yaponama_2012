<% @meta_title = @resource.to_label %>

<%= page do |p| %>

  <%= p.breadcrumb do |b| %>
    <%= b.item 'Главная', root_path %>
    <%= b.item 'Администрирование', admin_root_path %>
    <%= b.item 'Бренды', admin_brands_path %>
    <%= b.item @meta_title %>
  <% end %>

  <%= p.title do %>
    <%= page_header %>
  <% end %>

  <%= p.content do %>
    <%= link_to 'Добавить модель', new_admin_brand_model_path(@resource.id) %>
    <br />
    <%= render 'smart_show' %>
  <% end %>
<% end %>
