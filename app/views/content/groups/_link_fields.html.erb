<%= render :layout => 'content/groups/block', locals: { f: f } do %>

  <%= f.twbs_hidden_field :order %>

  <%= f.twbs_hidden_field :chat_partable_type %>

  <%= f.fields_for :chat_partable do |partable| %>
    <%= partable.twbs_text_field :title, placeholder: 'Текст ссылки', label: false, class: 'input-sm' %>
    <%= partable.twbs_text_field :url, placeholder: 'Адрес напр. http://ya.ru', label: false, class: 'input-sm' %>
    <%= partable.twbs_select :target, Rails.configuration.link_targets.map {|k,v| [v,k]}.to_a, { label: false }, class: 'input-sm' %>
  <% end %>

<% end %>
