<%= simple_form_for @resource, :url => polymorphic_path([:admin, @resource], return_path: params[:return_path]) do |f| %>

  <%= f.simple_fields_for :spare_info, f.object.spare_info, include_id: false do |b| %>
    <%= b.input :spare_info, as: :select2 %>
  <% end %>

  <%= f.simple_fields_for :brand, f.object.brand, include_id: false do |b| %>
    <%= b.input :brand, as: :select2 %>
  <% end %>

  <%= f.simple_fields_for :model, f.object.model || f.object.build_model, include_id: false do |b| %>
    <%= b.input :model, as: :select2 %>
  <% end %>

  <%= f.simple_fields_for :generation, f.object.generation || f.object.build_generation, include_id: false do |b| %>
    <%= b.input :generation, as: :select2 %>
  <% end %>

  <%= f.simple_fields_for :modification, f.object.modification || f.object.build_modification, include_id: false do |b| %>
    <%= b.input :modification, as: :select2 %>
  <% end %>

  <%= f.buttons %>

<% end %>
