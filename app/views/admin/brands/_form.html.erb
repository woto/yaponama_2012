<%= simple_form_for @resource, :url => polymorphic_path([:admin, @resource], return_path: params[:return_path]) do |f| %>

  <%= f.error_notification %>

  <%= f.input :name %>

  <%= f.simple_fields_for :brand, f.object.brand || f.object.build_brand, include_id: false do |b| %>
    <%= b.input :brand, as: :select2 %>
  <% end %>

  <%= f.input :sign, collection: Brand.signs, value_method: :first, label_method: :first, include_blank: true %>

  <%= f.input :image, as: :image_field %>
  <%= f.input :rating %>
  <%= f.input :is_brand %>
  <%= f.input :default_display %>
  <%= f.input :preview %>
  <%= f.input :content, :class => "ckeditor-extended" %>
  <%= f.buttons %>

<% end %>
