<% visible_columns.each do |column_name| %>

  <%= modal id: "#{column_name}_filter" do |modal| %>

    <%= modal.header do |header| %>
      <%= header.close %>
      <%= header.title { "Фильтр для: #{@resource_class.human_attribute_name(column_name)}" } %>
    <% end %>

    <%= modal.body do %>
      <%= render 'shared/grid_filter_input', :column_name => column_name, :type => @grid_class::COLUMNS[column_name][:type], :grid => @grid_class, f: f %>
    <% end %>

    <%= modal.footer do |footer| %>
      <%= footer.close %>
      <input class="btn btn-primary ignoredirty" name="filters" type="submit" value="Применить фильтр"></input>
    <% end %>

  <% end %>

<% end %>
