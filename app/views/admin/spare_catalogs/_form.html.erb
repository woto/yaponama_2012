<%= twbs_form_for @resource, :url => polymorphic_path([:admin, @resource], return_path: params[:return_path]) do |f| %>

  <%= row do %>

    <%= c1 do %>

      <%= f.twbs_text_field :name %>

      <%= f.simple_fields_for :spare_catalog_tokens do |sct| %>
        <%= render 'spare_catalog_token_fields', :f => sct %>
      <% end %>

      <%= f.form_group do %>
        <%= link_to_add_association 'Добавить токен', f, :spare_catalog_tokens, class: "btn btn-default"  %>
      <% end %>

      <%= f.twbs_text_area :intro, rows: 8 %>

    <% end %>

  <% end %>

  <%= f.twbs_text_area :page, class: 'ckeditor-extended', rows: 15 %>
  <%= f.twbs_submit %>

<% end %>
