<% title_edit %>

<%= page do |p| %>

  <%= p.breadcrumb do |b| %>
    <%= b.item 'Главная', root_path %>
    <%= b.item 'Администрирование', [:admin, :root] %>
    <%= b.item 'Категории', [:admin, @resource_class] %>
    <%= b.item @resource.to_label, [:admin, @resource] %>
    <%= b.item @meta_title %>
  <% end %>

  <%= p.title do %>
    <%= title_edit %>
  <% end %>

  <%= p.content :sm do %>
    <%= render 'form' %>
  <% end %>

<% end %>
