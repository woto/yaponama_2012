<%= f.form_group method.to_s.chomp('_id') do %>

  <%= f.control_label(method, label: extra[:label], asterisk: extra[:asterisk]) %>

  <%= f.collection_select method, collection, value_method, text_method, options, html_options %>

  <%= f.error method %>

  <%= f.hint(method, hint: extra[:hint]) %>

<% end %>

