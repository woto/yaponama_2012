<button type="button" class="btn btn-info bottom-space" data-toggle="collapse" data-target="#collapse-show">
  Служебное отображение
</button>
<br />

<div id="collapse-show" class="collapse">
  <% @resource_class.column_names.each do |col| %>
    <p>
      <strong> <%= @resource_class.human_attribute_name(col.to_sym) %> : </strong>
      <br />
      <strong> <%= col.to_sym %> : </strong>
      <br />
      <%= debug(@resource[col]) %>
    </p>
  <% end %>
</div>

<%= link_to url_for(:action => :edit), :class => 'btn btn-warning' do %>
  <%= icon 'edit' %>
  <%= t('.edit', :default => t("helpers.links.edit")) %>
<% end %>

<%= link_to url_for(:action => :destroy), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' do %>
  <%= icon 'times' %>
  <%= t('.destroy', :default => t("helpers.links.destroy")) %>
<% end %>

<%= link_to url_for(:action => :transactions), :class => 'btn btn-default' do %>
  <%= icon 'clock-o' %>
  <%= t('.transactions', :default => t("helpers.links.transactions"))  %>
<% end %>

<% if params[:return_path] %>
  <%= link_to params[:return_path], :class => 'btn btn-default' do %>
    <%= t('.back', :default => t("helpers.links.back")) %>
  <% end %>
<% end %>
