<% title_show %>

<%= page do |p| %>

  <%= p.breadcrumb do |b| %>
    <%= b.item 'Главная', [:root] %>
    <%= b.item 'Администрирование', [:admin, :root] %>
    <%= b.item 'Правила ботов', [:admin, @resource_class] %>
    <%= b.item @meta_title %>
  <% end %>

  <%= p.title do %>
    <%= page_header %>
  <% end %>

  <%= p.content do %>

    <%= link_to "Предпросмотр правила #{@resource.to_label}", preview_admin_bot_path(@resource) %>
    <br />
    <br />
    <%= render 'smart_show' %>
  <% end %>

<% end %>
