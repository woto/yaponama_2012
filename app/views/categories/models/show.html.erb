<%= page do |p| %>

  <%= p.breadcrumb do |b| %>
    <% if @resource.opt %>
      <%= b.item 'Главная', root_path %>
      <%= b.item('Запчасти', categories_path) %>
      <%= b.item(@resource.name, category_path(params[:category_id])) %>
      <%= b.item(@brand.name, category_brand_path(params[:category_id], @brand.to_param)) %>
      <%= b.item(@model.name) %>
    <% else %>
      <%= b.item 'Главная', root_path %>
      <%= b.item('Каталоги', catalogs_path) %>
      <%= b.item(@brand.name, catalogs_brand_path(@brand)) %>
      <%= b.item(@model.name, catalogs_model_path(@model)) %>
      <%= b.item(@resource.name) %>
    <% end %>
  <% end %>

  <%= p.title do %>
    <%= image_tag @brand.image_url, class: 'pull-right img-thumbnail', style: 'margin-top: -60px;' %>
    <%= page_header %>
    <%= discourse_head %>
  <% end %>

  <%= p.content do %>
    <% if @generations.exists? %>
      <%= panel 'primary', class: 'by-car' do |p| %>
        <%= p.heading "data-clickable-object" => true do %>
          <%= p.title do %>
            <a data-toggle="collapse" href="#by-car-collapse" data-clickable-href>Подбор <%= @resource.name %> по автомобилю </a>
            <%= icon 'caret-down pull-right' %>
          <% end %>
        <% end %>
        <%= content_tag :div, 'id' => 'by-car-collapse', 'class' => 'panel-collapse collapse' do %>
          <%= p.body do %>
            <ol id="categories-models-show-generations">
              <% @generations.each do |generation| %>
                <li data-clickable-object> <%= link_to safe_join([hidden("#{@resource.name} на #{@brand.name} #{@model.name} "), content_tag(:strong, generation.name)]), category_generation_path(params[:category_id], generation), 'data-clickable-href' => '' %> <%= "<small class='text-muted'>(#{generation.count}&nbsp;шт.)</small>".html_safe %> </li>
              <% end %>
            </ol>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <%= render 'tmp' %>

    <% if false %>
    <% if @current_user.seller? %>
      <%= link_to edit_admin_model_path(@model, :return_path => request.fullpath), class: 'btn btn-lg btn-warning top-space-lg bottom-space-lg' do %>
        <%= icon 'edit' %>
        Редактировать
      <% end %>
    <% end %>
    <% end %>

  <% end %>

<% end %>

<%= discourse_body %>
