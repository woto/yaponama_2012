<%= f.form_group method do %>

  <%= f.label method, class: "col-lg-2 col-md-3 col-sm-3 control-label" %>

  <div class="col-lg-6 col-md-7 col-sm-8">

    <div class="btn-group" data-toggle="buttons">
      <%= f.collection_radio_buttons method, collection, value_method, text_method, options, html_options do |ch| %>
        <%= ch.label(class: 'btn btn-default') do %>
          <%= ch.radio_button(:rel => "radio", :type => 'radio') + ch.text %>
        <% end %>
      <% end %>
    </div>
    <%= f.error method %>

  </div>

<% end %>

