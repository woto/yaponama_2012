<%= twbs_form_for @password_reset, url: done_password_reset_path do |f| %>

  <%= f.error_notification %>

  <%= f.twbs_password_field :password, :placeholder => "Новый пароль", asterisk: true %>
  <%= f.twbs_password_field :password_confirmation, :placeholder => "Введите новый пароль еще раз", asterisk: true %>

  <%= f.hidden_field :pin %>
  <%= f.hidden_field :value %>
  <%= f.hidden_field :with %>

  <%= f.twbs_submit "Сменить пароль" %>

<% end %>
