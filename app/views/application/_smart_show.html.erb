<div id="smart-show">

  <div id="collapse-show" class="collapse">
    <% @resource_class.column_names.each do |col| %>
      <p>
        <strong> <%= @resource_class.human_attribute_name(col.to_sym) %> : </strong>
        <br />
        <strong> <%= col.to_sym %> : </strong>
        <br />
        <%= debug(@resource[col]) %>
      </p>
    <% end %>
  </div>

  <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#collapse-show">
    <%= icon 'bug' %>
  </button>

  <%= link_to url_for(:action => :edit, return_path: request.fullpath), :class => 'btn btn-warning' do %>
    <%= icon 'edit' %>
    <%= t('.edit', :default => t("helpers.links.edit")) %>
  <% end %>

  <% begin %>
    <%= link_to url_for(:action => :transactions, return_path: request.fullpath), :class => 'btn btn-info' do %>
      <%= icon 'clock-o' %>
      <%= t('.transactions', :default => t("helpers.links.transactions"))  %>
    <% end %>
  <% rescue %>
  <% end %>

  <%= link_to url_for(:action => :destroy, return_path: request.fullpath), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' do %>
    <%= icon 'times' %>
    <%= t('.destroy', :default => t("helpers.links.destroy")) %>
  <% end %>

  <% if params[:return_path] %>
    &nbsp;&nbsp;или&nbsp;&nbsp;
    <%= link_to params[:return_path], :class => 'btn btn-default' do %>
      <%= t('.back', :default => t("helpers.links.back")) %>
    <% end %>
  <% end %>

</div> 
