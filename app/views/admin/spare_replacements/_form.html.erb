<%= simple_form_for @resource, :url => polymorphic_path([:admin, @resource], return_path: params[:return_path]) do |f| %>
  <%= f.error_notification %>

  <%= f.input :from_spare_info, as: :select2  %>
  <%= f.input :to_spare_info, as: :select2  %>
  <%= f.input :status, collection: Rails.configuration.replacements_statuses, label_method: :first, value_method: :first %>
  <%= f.input :wrong, collection: [['Замены правильная', true], ['Замена не правильная', false]] %>
  <%= f.buttons %>

<% end %>
