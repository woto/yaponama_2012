<%- model_class = Delivery -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:delivery_category) %></th>
      <th><%= model_class.human_attribute_name(:sequence) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%= model_class.human_attribute_name(:available) %></th>
      <th><%= model_class.human_attribute_name(:full_prepayment_required) %></th>
      <th><%= model_class.human_attribute_name(:name_required) %></th>
      <th><%= model_class.human_attribute_name(:phone_required) %></th>
      <th><%= model_class.human_attribute_name(:postal_address_required) %></th>
      <th><%= model_class.human_attribute_name(:delivery_cost_required) %></th>
      <th><%= model_class.human_attribute_name(:notes_invisible) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= link_to delivery.id, admin_delivery_path(delivery) %></td>
        <td>
          <% if delivery.delivery_category_id %>
            <%= link_to delivery.delivery_category.try(:to_label), admin_delivery_category_path(delivery.delivery_category_id) %></td>
        <% end %>
        <td><%= delivery.sequence %></td>
        <td><%= image_tag delivery.image if delivery.image.present? %></td>
        <td><%= delivery.name %></td>
        <td><%= delivery.notes %></td>
        <td><%= delivery.available %></td>
        <td><%= delivery.full_prepayment_required %></td>
        <td><%= delivery.name_required %></td>
        <td><%= delivery.phone_required %></td>
        <td><%= delivery.postal_address_required %></td>
        <td><%= delivery.delivery_cost_required %></td>
        <td><%= delivery.notes_invisible %></td>
        <td><%=l delivery.created_at %></td>
        <td><%=l delivery.updated_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_delivery_path(delivery), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_delivery_path(delivery),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_delivery_path,
            :class => 'btn btn-primary' %>
