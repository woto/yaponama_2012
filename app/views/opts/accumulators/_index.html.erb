<%= row id: "new_grid" do %>

  <div class="col-md-4 col-md-push-8 col-lg-3 col-lg-push-9">
    <div class="panel panel-primary">
      <div class="panel-body">
        <%= search_form_for @q, url: url_for, remote: true  do |f| %>
          <%= render 'opts/checkboxes', f:f, name: 'spare_info_brand_id', checkboxes: Brand.where("'accumulators' = ANY(opts)").map{|obj| {label: obj.name, value: obj.id}}, tabindex: '0' %>
          <%= render 'opts/checkboxes', f:f, name: 'accumulator_layout', tabindex: '0' %>
          <%= render 'opts/range', f:f, name: 'accumulator_battery_capacity', tabindex: '1' %>
          <%= render 'opts/range', f:f, name: 'accumulator_cold_cranking_amps', tabindex: '2' %>
          <%= render 'opts/range', f:f, name: 'accumulator_length', tabindex: '3' %>
          <%= render 'opts/range', f:f, name: 'accumulator_width', tabindex: '4' %>
          <%= render 'opts/range', f:f, name: 'accumulator_height', tabindex: '5' %>
          <%= render 'opts/checkboxes', f:f, name: 'accumulator_base_hold_down', tabindex: '0' %>
          <%= render 'opts/checkboxes', f:f, name: 'accumulator_terminal_types', tabindex: '0' %>
          <%= render 'opts/checkboxes', f:f, name: 'places_id', checkboxes: Deliveries::Place.where(active: true, display_marker: true).map{|obj| {label: obj.name, value: obj.id}}, tabindex: '0' %>
          <%= f.submit 'Обновить', class: 'btn btn-success top-space-md' %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-8 col-md-pull-4 col-lg-9 col-lg-pull-3">

    <div id="items-progress"> </div>

    <% @parts.each do |part| %>
      <%= render "#{@resource_class.name.underscore.pluralize}/part", part: part, resource_class: @resource_class %>
    <% end %>

    <div class="top-space bottom-space">
      <%= paginate @parts %>
    </div>

    <% if false %>
    <%= link_to 'New Accumulator', new_accumulator_path %>
    Масса (в незалитом виде)
    Размер корпуса
    <% end %>

  </div>
<% end %>
