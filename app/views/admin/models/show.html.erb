<% @meta_title = @resource.to_label %>

<%= page do |p| %>

  <%= p.breadcrumb do |b| %>
    <%= b.item 'Главная', [:root] %>
    <%= b.item 'Администрирование', [:admin, :root] %>
    <%= b.item 'Модели', [:admin, @resource_class] %>
    <%= b.item @meta_title %>
  <% end %>

  <%= p.title do %>
    <%= page_header %>
  <% end %>

  <%= p.content do %>
    <%= link_to 'Добавить поколение', new_admin_model_generation_path(@resource.id, return_path: params[:return_path]) %>
    <%= render 'smart_show' %>
  <% end %>
<% end %>
