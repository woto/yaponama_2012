<% end %>

<%= twbs_form_for @resource, url: polymorphic_path([:admin, @user, @resource], :return_path => params[:return_path]) do |f| %>
  <%= f.twbs_hidden_field :product_id %>

  <%= f.twbs_text_field :catalog_number, asterisk: true %>
  <%= f.twbs_check_box :hide_catalog_number %>

  <%= f.fields_for :brand, f.object.brand || f.object.build_brand do |b| %>
    <%= f.form_group :brand do %>
      <%= b.twbs_select2 :name, rel: 'select2-brand', data: {"true-id" => f.object.brand_id}, asterisk: true %>
      <%= f.error(:brand) %>
    <% end %>
  <% end %>

  <%# f.twbs_text_field :manufacturer, asterisk: true %>
