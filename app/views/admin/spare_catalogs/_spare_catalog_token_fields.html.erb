<%= f.nested_fields do %>

  <%= f.destroyable do %>

    <%= panel 'default' do |p| %>

      <%= p.heading do %>
        <%= p.title do %>
          &nbsp;
          <%= f.standard_remove %>
        <% end %>
      <% end %>

      <%= p.body do %>

        <%= f.input :name %>
        <%= f.input :weight %>

      <% end %>

    <% end %>

  <% end %>

<% end %>
