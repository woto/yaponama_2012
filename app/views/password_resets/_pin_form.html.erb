<%= form_for @password_reset, url: pin_password_reset_path, builder: TwitterBootstrapFormBuilder, html: { class: 'form-horizontal' } do |f| %>

  <%= f.alert_danger do %>
    <%= @password_reset.errors[:base].join %>
  <% end %>

  <%= f.text_input :pin %>
  <%= f.hidden_field :value %>
  <%= f.hidden_field :with %>

  <%= f.standard_submit %>

<% end %>
