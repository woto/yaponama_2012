<%= form_for @password_reset, url: done_password_reset_path, builder: TwitterBootstrapFormBuilder, html: { class: 'form-horizontal' } do |f| %>

  <%= f.alert_danger do %>
    <%= @password_reset.errors[:base].join %>
  <% end %>

  <%= f.password_input :password, :placeholder => "Новый пароль" %>
  <%= f.password_input :password_confirmation, :placeholder => "Введите новый пароль еще раз" %>

  <%= f.hidden_field :pin %>
  <%= f.hidden_field :value %>
  <%= f.hidden_field :with %>

  <%= f.standard_submit "Сменить пароль" %>

<% end %>
