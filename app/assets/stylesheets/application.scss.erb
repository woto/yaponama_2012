  @extend .list-unstyled;

  @media (max-width: $screen-xs-max) { @include content-columns(1); }
  @media (min-width: $screen-sm-min) and (max-width: $screen-sm-max) { @include content-columns(1); }
  @media (min-width: $screen-md-min) and (max-width: $screen-md-max) { @include content-columns(2); }
  @media (min-width: $screen-lg-min) { @include content-columns(3) }

