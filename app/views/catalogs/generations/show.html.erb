<% b = Breadcrumb.new(self) %>

<%= b1 do %>

  <ol class="breadcrumb">
    <%= b.item('Каталоги', catalogs_path) %>
    <%= b.item(@brand.name, catalogs_brand_path(@brand)) %>
    <%= b.item(@model.name, catalogs_model_path(@model)) %>
    <%= b.item(@generation.name) %>
  </ol>

  <% @meta_title = "#{@brand.name} #{@model.name} #{@generation.name}" %>
  <%= page_header %>

  <ol id="catalogs-generation-modifications">
    <% @generations.each do |modification| %>
      <li> <%= link_to modification.cached_modification, catalogs_modification_path(modification.to_modification_param) %> </li>
    <% end %>
  </ol>

  <%= render 'best_parts_list' %>

  <% if @generation.content.present? %>
    <hr />
    <div id="catalogs-generation-content"><%== @generation.content %></div>
  <% end %>

  <% if @current_user.seller? %>
    <%= link_to edit_admin_generation_path(@generation, :return_path => request.fullpath), class: 'btn btn-lg btn-warning top-space-lg bottom-space-lg' do %>
      <%= icon 'edit' %>
      Редактировать
    <% end %>
  <% end %>

<% end %>
