<% title_show %>

<%= page do |p| %>

  <%= p.breadcrumb do |b| %>
    <%= b.item 'Главная', [:root] %>
    <%= b.item 'Администрирование', [:admin, :root] %>
    <%= b.item 'Опции заказов', [:admin, @resource_class] %>
    <%= b.item @meta_title %>
