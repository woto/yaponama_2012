<div id="grid-toolbar-per-page">

  <div class="form-inline">

    <%= content_tag :div,
      class: "btn btn-default",
      title: "Строк на странице",
      rel: "popover",
      data: {
        toggle: "popover",
        html: "true",
        placement: "bottom",
        content: render('grid_toolbar_per_page_data_content').gsub("\"", "'")
      } do %>
      <%= icon 'list-ol' %>
      <%= @grid.per_page %>
    <% end %>

  </div>

</div>
