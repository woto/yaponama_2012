<%= twbs_form_for @resource, :url => polymorphic_path([:admin, @resource], return_path: params[:return_path]) do |f| %>

  <%= row do %>

    <%= c1 do %>

      <%= f.twbs_text_field :question, asterisk: true %>

    <% end %>

  <% end %>

  <%= row do %>

    <div class="col-md-12">

      <%= f.twbs_text_area :answer, class: 'ckeditor-extended' %>

      <%= f.twbs_submit %>

    </div>

  <% end %>


<% end %>
