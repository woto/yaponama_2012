<% @meta_title = guest_or_user_to_label(@resource) %>

<%= page do |p| %>

  <%= p.breadcrumb do |b| %>
    <%= b.item 'Главная', [:root] %>
    <%= b.item 'Администрирование', [:admin, :root] %>
    <%= b.item 'Пользователи', [:admin, @resource_class] %>
    <%= b.item @meta_title %>
  <% end %>

  <%= p.title do %>
    <%= page_header %>
  <% end %>

  <%= p.content do %>
    <%= link_to 'Войти под пользователем', url_for(action: :impersonate) %> <br />
    <%= render 'smart_show' %>

  <% end %>
<% end %>
