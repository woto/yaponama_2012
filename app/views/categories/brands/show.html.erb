<%= somebody_tabs do %>

  <% b = Breadcrumb.new(self) %>

  <ol class="breadcrumb">
    <%= b.item('Запчасти', categories_path) %>
    <%= b.item(@resource.name, category_path(params[:category_id])) %>
    <%= b.item(@brand.name) %>
  </ol>

  <% @meta_title = "#{@resource.name} НА #{@brand.name}" %>
  <% @meta_title_small = "(рус. #{@brand.slang})" if @brand.slang.present? %>
  <%= page_header %>

  <ol id="category-models">
    <% @models.each do |model| %>
      <li> <%= link_to "#{@resource.name} НА #{@brand.name} #{model.cached_model}", category_model_path(params[:category_id], model.to_model_param) %> </li>
    <% end %>
  </ol>

  <% if @resource_class %>
    <%= render partial: "#{@resource_class.name.underscore.pluralize}/index", layout: 'paginator'  %>
  <% else %>
    <%= render partial: 'best_parts_list', layout: 'paginator'  %>
  <% end %>

  <% if @current_user.seller? %>
    <%= link_to edit_admin_brand_path(@brand, :return_path => request.fullpath), class: 'btn btn-lg btn-warning top-space-lg bottom-space-lg' do %>
      <%= icon 'edit' %>
      Редактировать
    <% end %>
  <% end %>

<% end %>
