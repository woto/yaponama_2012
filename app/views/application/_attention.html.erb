<% content_for :attention do %>

  <% attentioned_news.each do |topic| %>
    <details>
      <summary>
        <b><%= topic['title'] %></b>
      </summary>
      <div>
        <%== topic['post'] %>
      </div>
    </details>
    <% if false %>
    <div>
      <span> <%= link_to topic['title'],  "http://forum.avtorif.ru/t/#{topic['slug']}/#{topic['id']}", class: 'alert-link' %> </span>
    </div>
    <% end %>
  <% end %>

<% end %>
