<% @discourse = {} %>
<% @discourse[:category] = @resource.name %>
<% @discourse[:brand] = @brand.name %>

<%= page do |p| %>

  <%= p.breadcrumb do %>
    <%= breadcrumb false, exception=true do |b| %>
      <%= b.item('Запчасти', categories_path) %>
      <%= b.item(@resource.name, category_path(params[:category_id])) %>
      <%= b.item(@brand.name) %>
    <% end %>
  <% end %>


  <%= p.title do %>
    <% @meta_title = "#{@resource.name} на #{@brand.name}" %>
    <%# TODO @meta_title_small = "(рус. #{@brand.brands.slang.pluck(:name).join(', ')})" if @brand.brands.slang.exists? %>
    <%= image_tag @brand.image_url, class: 'pull-right img-thumbnail', style: 'margin-top: -60px;' %>
    <% discourse_head(@meta_title, @meta_title_small) %>
    <%= page_header %>
  <% end %>

  <%= p.content do %>
    <% if @models.exists? %>
      <%= panel 'primary', class: 'by-car' do |p| %>
        <%= p.heading "data-clickable-object" => true do %>
          <%= p.title do %>
            <a data-toggle="collapse" href="#by-car-collapse" data-clickable-href>Подбор <%= @resource.name %> по автомобилю </a>
            <%= icon 'caret-down pull-right' %>
          <% end %>
        <% end %>
        <%= content_tag :div, 'id' => 'by-car-collapse', 'class' => 'panel-collapse collapse' do %>
          <%= p.body do %>
            <ol id="categories-brands-show-models">
              <% @models.each do |model| %>
                <li data-clickable-object> <%= link_to safe_join([hidden("#{@resource.name} на #{@brand.name} "), content_tag(:strong, model.name)]), category_model_path(params[:category_id], model), 'data-clickable-href' => '' %> <%= "<small class='text-muted'>(#{model.count}&nbsp;шт.)</small>".html_safe %></li>
              <% end %>
            </ol>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <%= render 'tmp' %>

    <% if false %>
    <% if @current_user.seller? %>
      <%= link_to edit_admin_brand_path(@brand, :return_path => request.fullpath), class: 'btn btn-lg btn-warning top-space-lg bottom-space-lg' do %>
        <%= icon 'edit' %>
        Редактировать
      <% end %>
    <% end %>
    <% end %>

  <% end %>

<% end %>

<%= discourse_body(@meta_title, @meta_title_small) %>
