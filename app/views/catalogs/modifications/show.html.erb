<% b = Breadcrumb.new(self) %>

<%= b1 do %>

  <ol class="breadcrumb">
    <%= b.item('Каталог', catalogs_path) %>
    <%= b.item(@brand.name, catalogs_brand_path(@brand)) %>
    <%= b.item(@model.name, catalogs_model_path(@model)) %>
    <%= b.item(@generation.name, catalogs_generation_path(@generation)) %>
    <%= b.item(@modification.name) %>
  </ol>

  <% @meta_title = "#{@brand.name} #{@model.name} #{@generation.name} #{@modification.name}" %>
  <%= page_header %>

  <%= render 'best_parts_list' %>

  <% if @modification.content.present? %>
    <hr />
    <div id="catalogs-modification-content">
      <%== @modification.content %>
    </div>
  <% end %>

<% end %>
