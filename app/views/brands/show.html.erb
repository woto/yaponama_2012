<%= b1 do %>

  <% @meta_title = @resource.name %>

  <%= image_tag @resource.image_url %>
  <br />
  <br />
  <%= raw @resource.preview %>
  <br />
  <br />
  <%= raw @resource.content %>

  <h3> Запчасти этого производителя</h3>
  <% @spare_infos.each do |spare_info| %>
    <%= debug spare_info %>
    <%= link_to polymorphic_path([:new, *jaba3, :product], :catalog_number => spare_info.catalog_number, :anchor => spare_info.cached_brand ) do %> 
      <%= spare_info.catalog_number %>
      <%= spare_info.content %>
    <% end %>
    <br />
  <% end %>

  <br/ >
  <%= paginate @spare_infos %>

<% end %>
